# ========================================
# SIGEC - Configuration Production
# ========================================

# ===== PROFIL =====
SPRING_PROFILES_ACTIVE=prod

# ===== BASE DE DONNÉES =====
DB_URL=jdbc:postgresql://prod-db-host:5432/sigec_prod
DB_USERNAME=sigec_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Hibernate (NE PAS MODIFIER EN PRODUCTION)
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ===== JWT CONFIGURATION =====
# Générer avec: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_EXPIRATION=86400000

# ===== EMAIL CONFIGURATION =====
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=CHANGE_ME_APP_PASSWORD

# ===== ADMIN CONFIGURATION =====
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
ADMIN_EMAIL=admin@yourdomain.com

# ===== OAUTH2 CONFIGURATION =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH2_DEV_MODE=false
OAUTH2_TEST_ENABLED=false

# ===== SSL/HTTPS CONFIGURATION =====
SSL_ENABLED=true
SSL_KEYSTORE_PATH=/etc/sigec/keystore.p12
SSL_KEYSTORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD
SSL_KEY_ALIAS=sigec

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# ===== FRONTEND URL =====
FRONTEND_URL=https://app.yourdomain.com

# ===== BACKUP CONFIGURATION =====
BACKUP_DIRECTORY=/var/backups/sigec
BACKUP_RETENTION_DAYS=30
BACKUP_CRON=0 0 2 * * *

# ===== LOGS CONFIGURATION =====
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_SPRING_SECURITY=WARN
LOG_LEVEL_OAUTH2=WARN
LOG_LEVEL_SERVICES=INFO
LOG_LEVEL_CONTROLLER=INFO

# ===== STORAGE CONFIGURATION =====
SECURE_STORAGE_PATH=/var/sigec/secure-storage

# ===== TWILIO SMS (OPTIONNEL) =====
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ===== RECAPTCHA (OPTIONNEL) =====
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
